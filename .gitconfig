[branch]
	autosetuprebase = always
[merge]
	tool = meld
[diff]
	tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"
[guitool "mergetool"]
	cmd = meld
[http]
	postBuffer = 100M
    sslVerify = false
[credential]
	helper = cache --timeout=36000
[pull]
  rebase = true
[push]
	default = simple
	followTags = true
[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(bold yellow)%GK%Creset
  graph = true
[core]
	editor = nvim
