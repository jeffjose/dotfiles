[alias]
    commti = commit
    commt = commit
    ocmmit = commit
    ad = add
    psh = push
    ush = push
    st = status
    t = status
    sb = show-branch
    co = checkout
    d = describe --tags --always
    ci = commit
    one = log -n 1
    cached = diff --cached
    changelog = "!f() { r=${1:-`git describe --tags --abbrev=0`..HEAD}; echo Changelog for $r; git log --reverse --no-merges --format='* %s' $r; }; f"
    br = branch
    bra = branch -a
    la = log
    last = diff HEAD^ HEAD
    list = diff --name-status
    cam = commit -a -m
    cm = commit -m
    search = grep --color -n
    searchf = grep --name-only
    searchn = grep --files-without-match
    pul = pull
    pull = pull -v
    sdiff = stash show -p
    dif = diff
    stashall = stash --include-untracked
    empty = commit --allow-empty
    cp = "!f() { git commit --allow-empty -m \"üèÅ CHECKPOINT: $1\"; }; f"
    fs = "!f() { git commit --allow-empty -m \"üöÄ START: $1\"; }; f"
    fe = "!f() { git commit --allow-empty -m \"‚úÖ END: $1\"; }; f"
    sha = log -n 1 --pretty="%h"

[color]
    diff = auto
    status = auto
    branch = auto

[color "branch"]
    local = yellow
    current = green
    remote = red
    plain = normal

[color "diff"]
    old = red
    new = green
    plain = normal
    meta = bold
    frag = cyan
    commit = yellow
    whitespace = normal red

[color "status"]
    updated   = green
    changed   = yellow

    added     = green
    modified  = yellow
    header    = normal
    untracked = red
    nobranch  = red

[color "grep"]
    match = normal

[color "interactive"]
    prompt = normal
    header = normal
    help = normal
    error = normal
[gui]
	fontdiff = -family \"liberation mono\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0

