# Prompt
    set     red="%{\033[1;31m%}"
    set   green="%{\033[0;32m%}"
    set  yellow="%{\033[1;33m%}"
    set    blue="%{\033[1;34m%}"
    set magenta="%{\033[1;35m%}"
    set    cyan="%{\033[1;36m%}"
    set   white="%{\033[0;37m%}"
    set     end="%{\033[0m%}"    # This is needed at the end... :(

    set prompt='[%n@%m %B%c%b]%# '
    set ellipsis

set WIFI = `iwgetid -r`

if (${HOST} == "spectre") then
    set host_color = "${magenta}"
else
    set host_color = "${yellow}"
endif

if (${WIFI} == 'Barracuda') then
    set wifi_color = "${magenta}"
    set wifi_str = "@${WIFI}"
else if (${WIFI} == '') then
    set wifi_color = "${red}"
    set wifi_str = "offline"
else
    set wifi_color = "${yellow}"
    set wifi_str = "@${WIFI}"
endif

if ($?STY) then
    set prompt = "-(${cyan}%B%P%b${end} ${host_color}${HOST}${end} ${wifi_color}${wifi_str}${end} ${green}%B%/%b${end})-\n#${end} "
else
    set prompt = "-(${white}%P${end} ${white}${HOST}${end} ${white}${WIFI}${end} ${white}%/${end})-\n?${end} "
endif
